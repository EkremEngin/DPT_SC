{
    "name": "dijitalpark-backend",
    "version": "1.0.0",
    "description": "Backend API for DijitalPark Teknokent",
    "main": "src/index.ts",
    "scripts": {
        "start": "node dist/index.js",
        "dev": "nodemon -r dotenv/config src/index.ts",
        "build": "tsc",
        "db:init": "ts-node src/db/init.ts",
        "db:seed": "ts-node src/db/seed.ts",
        "db:seed:perf": "ts-node -r dotenv/config src/db/seed-perf.ts",
        "db:migrate": "ts-node -r dotenv/config src/db/run-migration.ts",
        "reset": "ts-node -r dotenv/config src/scripts/reset-system.ts",
        "backup": "ts-node -r dotenv/config src/scripts/backup-database.ts",
        "backup:schema": "ts-node -r dotenv/config src/scripts/backup-database.ts -- --schema-only",
        "backup:data": "ts-node -r dotenv/config src/scripts/backup-database.ts -- --data-only",
        "backup:offsite": "ts-node -r dotenv/config src/scripts/backup-offsite.ts",
        "backup:rotate": "ts-node -r dotenv/config src/scripts/backup-rotation.ts",
        "backup:validate": "ts-node -r dotenv/config src/scripts/backup-validation.ts",
        "backup:lock:status": "ts-node -r dotenv/config src/scripts/backup-lock.ts status",
        "backup:lock:clear": "ts-node -r dotenv/config src/scripts/backup-lock.ts clear",
        "restore": "ts-node -r dotenv/config src/scripts/restore-database.ts",
        "backup:scheduled": "bash src/scripts/scheduled-backup.sh",
        "drill:restore": "ts-node -r dotenv/config src/scripts/restore-drill-test.ts",
        "perf:run": "ts-node -r dotenv/config src/scripts/perf-runner.ts",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage",
        "test:ci": "jest --ci --coverage --maxWorkers=2",
        "test:security": "jest --testPathPatterns=tests/security --verbose",
        "test:security:coverage": "jest --testPathPatterns=tests/security --coverage",
        "audit": "npm audit --audit-level=moderate",
        "audit:fix": "npm audit fix",
        "dast:scan": "bash src/tests/security/dast-scan.sh"
    },
    "keywords": [],
    "author": "",
    "license": "ISC",
    "dependencies": {
        "autocannon": "^7.15.0",
        "axios": "^1.13.5",
        "bcrypt": "^6.0.0",
        "cors": "^2.8.5",
        "dotenv": "^16.4.1",
        "express": "^4.18.2",
        "express-rate-limit": "^8.2.1",
        "express-validator": "^7.0.1",
        "helmet": "^8.1.0",
        "jsonwebtoken": "^9.0.3",
        "pg": "^8.11.3",
        "pino": "^10.3.1",
        "pino-http": "^11.0.0",
        "pino-pretty": "^13.1.3",
        "uuid": "^9.0.1"
    },
    "devDependencies": {
        "@types/autocannon": "^7.12.7",
        "@types/bcrypt": "^6.0.0",
        "@types/cors": "^2.8.17",
        "@types/express": "^4.17.21",
        "@types/jest": "^30.0.0",
        "@types/jsonwebtoken": "^9.0.10",
        "@types/node": "^20.11.19",
        "@types/pg": "^8.11.0",
        "@types/supertest": "^6.0.3",
        "@types/uuid": "^9.0.8",
        "jest": "^30.2.0",
        "nodemon": "^3.0.3",
        "supertest": "^7.2.2",
        "ts-jest": "^29.4.6",
        "ts-node": "^10.9.2",
        "typescript": "^5.3.3"
    }
}
